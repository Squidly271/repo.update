<script>
var URL = "/plugins/<?=$plugin?>/include/exec.php";
var imgRed = {src:"/plugins/<?=$plugin?>/images/red.png",title:'Click To Remove Container'};
var imgGreen = {src:"/plugins/<?=$plugin?>/images/green.png",title:'Click To Add Container'};
